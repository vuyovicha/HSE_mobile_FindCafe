<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_background"
    android:elevation="10dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">

    <ImageButton
        android:id="@+id/see_route_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_border"
        android:tint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@id/cafeImageSmall"
        app:layout_constraintEnd_toStartOf="@+id/timeAddedToRoute"
        app:layout_constraintStart_toEndOf="@+id/cafeImageSmall"
        app:layout_constraintTop_toBottomOf="@id/cafeAddress"
        app:srcCompat="@drawable/ic_directions_black_24dp" />


    <ImageView
        android:id="@+id/cafeImageSmall"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/cafeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Master And Margarita"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cafeImageSmall"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cafeAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="Thailand, Pakistan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cafeImageSmall"
        app:layout_constraintTop_toBottomOf="@id/cafeName" />

    <TextView
        android:id="@+id/timeAddedToRoute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:text="+15 minutes added"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/cafeImageSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/see_route_button"
        app:layout_constraintTop_toBottomOf="@id/cafeAddress" />


</androidx.constraintlayout.widget.ConstraintLayout>